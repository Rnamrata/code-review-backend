# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Python RAG Service
RAG_BASE_URL=http://localhost:5001
RAG_TIMEOUT=30000
RAG_RETRY_ATTEMPTS=3

# File Upload Configuration
MAX_FILE_SIZE_MB=1
ALLOWED_EXTENSIONS=.py,.js,.java,.ts,.jsx,.tsx

# Session Configuration
SESSION_TIMEOUT_HOURS=24
SESSION_CLEANUP_INTERVAL_HOURS=1

# Analysis Configuration
ENABLE_STATIC_ANALYSIS=true
ENABLE_SECURITY_ANALYSIS=true
ENABLE_COMPLEXITY_ANALYSIS=true
ENABLE_STYLE_CHECKING=true
ENABLE_RAG_ANALYSIS=true

# Complexity Thresholds
CYCLOMATIC_COMPLEXITY_THRESHOLD=5
COGNITIVE_COMPLEXITY_THRESHOLD=7
MAX_NESTING_DEPTH=2

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100